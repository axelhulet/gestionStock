{% extends 'base.html.twig' %}

{% block title %}
    Modifier une commande
{% endblock %}

{% block body %}
    <h3>Modifier la commande {{ commandes.reference }}</h3>
    <form action="" method="post" enctype="multipart/form-data">
        {{ form_widget(form._token) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.reference) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.updateDate) }}
            </div>
        </div>
        <div class="row">

            <div class="col-md-6">
                {{ form_row(form.client) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_row(form.etat) }}
            </div>
        </div>
    </form>
    <div  class="mt-5" data-controller="react-commande" data-id="{{ commandes.id }}"></div>
{% endblock %}

