{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}
{% set keyword = app.request.get('keyword') %}
{% set offset = app.request.get('offset') %}

{% block body %}
<div>

    <a class="btn btn-dark mb-2" href="{{ path('produit_add') }}">Nouveau</a>

    <form method="get">
        <input name="keyword" value="{{ keyword }}">
        <button class="btn btn-info">Chercher</button>
    </form>
</div>
<div>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">RÃ©ference</th>
            <th scope="col">Nom</th>
            <th scope="col">Description</th>
            <th scope="col">Prix unitaire</th>
            <th scope="col">Stock</th>
            <th scope="col">Supprimer</th>
            <th scope="col">Modifier</th>
        </tr>
        </thead>
        <tbody>
        {% for produit in tableauProduit %}
            <tr>
                <td>{{ produit.reference }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.desc }}</td>
                <td>{{ produit.prixNum }}</td>
                <td>{{ produit.stock }}</td>
                <td><a class="btn btn-sm btn-danger" href="{{ path('produit_delete',{id: produit.id} ) }}" data-bs-toggle="modal" data-bs-target="#my-modal"><i class="fa fa-trash"></i></a></td>
                <td><a class="btn btn-sm btn-success" href="{{ path('produit_update',{id: produit.id} ) }}" ><i class="fa fa-edit"></i></a></td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if total > 2 %}
        <nav aria-label="Page navigation example" style = "padding-top: 300px; display: flex; justify-content: center">
            <ul class="pagination" >
                {% for i in range(1, (total/2) | round(0, 'ceil'))  %}
                    {% if offset != (i-1)* 2 %}
                        <li class="page-item" >
                            <a style="color: black" class="page-link" href="{{ path('produit', {'offset': (i-1)* 2, 'keyword': keyword }) }}">{{ i }}</a>
                        </li>
                    {% else  %}
                        <li class="page-item active" >
                            <span style="color: black" class="page-link" href="">{{ i }}</span>
                        </li>
                    {% endif %}
                    </li>
                {% endfor %}
            </ul>

        </nav>
    {% endif %}
{% endblock %}
